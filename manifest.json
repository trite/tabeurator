{
  "manifest_version": 2,
  "name": "Tabeurator",
  "version": "1.0",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "icons": {
    "48": "icons/tabeurator-48.png",
    "96": "icons/tabeurator-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "borderify.js"
      ]
    }
  ]
}